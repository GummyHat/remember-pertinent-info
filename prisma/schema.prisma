generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Concept {
  /// Primary key (cuid = collision-resistant unique id)
  id          String   @id @default(cuid())

  /// Short unique code for easy lookups (e.g. "FOURIER")
  code        String   @unique

  /// Display name (e.g. "Fourier Transform")
  name        String

  /// Optional longer description or notes
  description String?

  /// Future relationships
  // classes     ClassConcept[]  // link to classes later
  // skills      SkillConcept[]  // link to skills later
}
