generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Concept {
  /// Primary key (cuid = collision-resistant unique id)
  id          String   @id @default(cuid())

  /// Short unique code for easy lookups (e.g. "FOURIER")
  code        String   @unique

  /// Display name (e.g. "Fourier Transform")
  name        String

  /// Optional longer description or notes
  description String?

  /// Future relationships
  // classes     ClassConcept[]  // link to classes later
  // skills      SkillConcept[]  // link to skills later
}

model Skill {
  id          String  @id @default(cuid())
  code        String  @unique
  name        String
  description String?
}

model Course {
  id          String  @id @default(cuid())
  code        String  @unique
  name        String
  description String?
  // Relations
  majors      Major[]
  tracks      Track[]
}

model Track {
  id          String  @id @default(cuid())
  code        String  @unique
  name        String
  description String?
  // Relations
  courses     Course[]
  majors      Major[]
}

model Department {
  id          String  @id @default(cuid())
  code        String  @unique
  name        String
  description String?
  // Relations
  majors      Major[]
}

model Major {
  id          String  @id @default(cuid())
  code        String  @unique
  name        String
  description String?
  // Relations
  department   Department? @relation(fields: [departmentId], references: [id])
  departmentId String?
  courses      Course[]
  tracks       Track[]
}
